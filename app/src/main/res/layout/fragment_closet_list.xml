<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFF1F6">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Closets"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#AD1457"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=" Here you can manage multiple closets."
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnGoMyItems"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Go to My Items"
        android:textColor="#FFFFFF"
        android:backgroundTint="#EC407A"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnGoAddItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:textColor="#FFFFFF"
        android:backgroundTint="#D81B60"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnGoMyItems"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
